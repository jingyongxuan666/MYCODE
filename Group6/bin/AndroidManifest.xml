<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group6.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".IndexActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".ItemListActivity"
            android:label="@string/title_activity_item_list" >
        </activity>
        <activity
            android:name=".ItemDetailsActivity"
            android:label="@string/title_activity_item_details" >
        </activity>
        <activity
            android:name=".TaskDetailActivity"
            android:label="@string/title_activity_task_detail" >
        </activity>
        <activity
            android:name=".UserDetailActivity"
            android:label="@string/title_activity_user_detail" >
        </activity>
        <activity
            android:name=".CreateReqActivity"
            android:label="@string/title_activity_create_req" >
        </activity>
        <activity
            android:name=".CreateUserActivity"
            android:label="@string/title_activity_create_user" >
        </activity>
    </application>

</manifest>
