<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.hzr.cloudstation.EmpEditActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_myTitle_ee"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="80dp"
        android:background="@color/mainColor"
        app:popupTheme="@style/Widget.AppCompat.SearchView.ActionBar" />
    <com.hzr.cloudstation.myView.ClearEditText
        android:id="@+id/et_edit_empName"
        style="@style/LoginET"
        android:layout_marginTop="80dp"></com.hzr.cloudstation.myView.ClearEditText>
    <com.hzr.cloudstation.myView.ClearEditText
        android:id="@+id/et_edit_empTel"
        style="@style/LoginET"></com.hzr.cloudstation.myView.ClearEditText>
    <Button
        android:id="@+id/btn_confirm_update"
        style="@style/loginBtn"
        android:text="确认修改"
        android:background="@drawable/login_btn_selector"/>
</LinearLayout>
